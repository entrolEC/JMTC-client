generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password String
  invoices Invoice[]
}

model Invoice {
  id          String   @id @default(uuid())
  customer_id String
  amount      Int
  status      String
  date        DateTime
  customer    Customer @relation(fields: [customer_id], references: [id])
  User        User?    @relation(fields: [user_id], references: [id])
  user_id     String?
}

model Customer {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  image_url String
  invoices  Invoice[]
}

model Revenue {
  month   String @id
  revenue Int
}

model Quote {
  id              String      @id @default(uuid())
  mode            String      @default("ocean")
  grossWeight     Float?
  writer          String
  manager         String
  value           Float
  currency        String
  exchangeRate    Float
  items           Item[]
  loadingPortId   String
  dischargePortId String
  loadingPort     Port        @relation(name: "loadingPort", fields: [loadingPortId], references: [id])
  dischargePort   Port        @relation(name: "dischargePort", fields: [dischargePortId], references: [id])
  incoterm        Incoterm    @relation(fields: [incotermId], references: [id])
  ctnr            Ctnr        @relation(fields: [ctnrId], references: [id])
  QuoteItem       QuoteItem[]
  createdAt       DateTime    @default(now())
  incotermId      String
  ctnrId          String
}

model Currency {
  id   String @id @default(uuid())
  code String
  name String
}

model Item {
  id        String   @id @default(uuid())
  code      String   @unique
  quote     Quote[]
  name      String
  unitType  String
  createdAt DateTime @default(now())
  vat       Boolean  @default(false)
}

model QuoteItem {
  id       String @id @default(uuid())
  quote_id String
  quote    Quote  @relation(fields: [quote_id], references: [id], onDelete: Cascade)
  code     String
  name     String
  value    Float  @default(0)
  unitType String
  price    Float  @default(0)
  amount   Float  @default(0)
  currency String
  vat      Float  @default(0)
}

model Port {
  id             String  @id @default(uuid())
  code           String
  name           String
  description    String?
  loadingQuote   Quote[] @relation(name: "loadingPort")
  dischargeQuote Quote[] @relation(name: "dischargePort")
}

model Ctnr {
  id          String  @id @default(uuid())
  code        String
  name        String
  description String?
  Quote       Quote[]
}

model Incoterm {
  id          String  @id @default(uuid())
  code        String
  name        String
  description String?
  Quote       Quote[]
}
